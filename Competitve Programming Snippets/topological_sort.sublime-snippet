// Topological Sort ( White - Black - Grey Colouring )
const ll N=200009;
vector<ll> gr[N];
ll vis1[N]; // White colour
vl order;

void dfs1(ll src){
	vis1[src] = 1; // Black Colour
	for(auto ne: gr[src]){
		if(vis1[ne] == 1){
			// Graph is NOT a DAG
			cout<<"NO"<<nl;
			exit(0);
		}
		if(vis1[ne] == 2){
			continue;
		}
		dfs1(ne);
	}
	order.pb(src);
	vis1[src] = 2; // Grey Colour
}

